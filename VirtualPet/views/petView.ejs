<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Pet Page</title>
    <style>
        #square {
            width: 300px;
            height: 300px;
            background-color: #E48400;
            place-items: center;
            margin: auto;
        }
    </style>
</head>

<body>
    <h1 id="petNameDisplay">This is <%-petName%></h1>
    <p>Hunger drains every 10 seconds</p>
    <p id="hungerDisplay">Hunger: <%-petHunger%>/50</p>
    <p id="happinessDisplay">Happiness: <%-petHappiness%>/50</p>
    <button onclick="feedPet()">Feed Pet</button>
    <button onclick="playWithPet()">Play With Pet</button>
    <div class="square" id="square"></div>
    <script>
        const xhttp = new XMLHttpRequest();
        const hungerDisplay = document.getElementById('hungerDisplay');
        const happinessDisplay = document.getElementById('happinessDisplay');
        const petNameDisplay = document.getElementById('petNameDisplay');
        var petName = "<%-petName%>";
        var petHunger = parseInt(`<%-petHunger%>`);
        var petHappiness = parseInt(`<%-petHappiness%>`);
        var money = parseInt(`<%-money%>`);
        var statChangeCounter = 0;
        hungerDisplay.innerText = "Hunger: " + petHunger + "/50";
        happinessDisplay.innerText = "Happiness: " + petHappiness + "/50";
        petNameDisplay.innerText = "This is " + petName;
        // Create Pet Hunger stat and drain
        function petHungerDrain() {
            if (petHunger > 0) {
                petHunger -= 1;
                console.log("Pet Hunger: ", petHunger);
                sendStats(petHunger, petHappiness, money)
                hungerDisplay.innerText = "Hunger: " + petHunger + "/50";
            } else {
                console.log("Hunger level has reached 0.");
                alert("Your pet " + petName + " has died of starvation.");
            }
        }

        function petHappinessDrain() {
            if (petHappiness > 0) {
                petHappiness -= 1;
                console.log("Pet Happiness: ", petHappiness);
                sendStats(petHunger, petHappiness, money)
                happinessDisplay.innerText = "Happiness: " + petHappiness + "/50";
            } else {
                console.log("Happiness level has reached 0.");
                alert("Your pet " + petName + " has died of boredom.");
            }
        }
        
        function gainMoney() {
            if (petHunger >= 20 && petHappiness >= 20) {
                money += 1;
                console.log("Money: ", money);
                sendStats(petHunger, petHappiness, money)
            }
        }

        function statChange() {
            colorChange();
            statChangeCounter += 1;
            if (statChangeCounter >= 100) {
                petHungerDrain();
                petHappinessDrain();
                gainMoney();
                statChangeCounter = 0;
            }
        }

        setInterval(statChange, 100);

        // Button to feed pet
        function feedPet() {
            console.log(petHunger)
            if (petHunger < 50) {
                petHunger += 1;
                sendStats(petHunger, petHappiness, money)
                colorChange(petHunger, petHappiness)
                hungerDisplay.innerText = "Hunger: " + petHunger + "/50";
            } else {
                console.log("Pet is full.");
            }
        }

        function playWithPet() {
            console.log(petHappiness)
            if (petHappiness < 50) {
                petHappiness += 1;
                sendStats(petHunger, petHappiness, money)
                colorChange(petHunger, petHappiness)
                happinessDisplay.innerText = "Happiness: " + petHappiness + "/50";
            } else {
                console.log("Pet is happy.");
            }
        }

        //Send Hunger Stat to Server
        function sendStats(hunger, happiness, money) {
            xhttp.open("POST", "/petView", true);
            xhttp.setRequestHeader("Content-Type", "application/json;charset=UTF-8");
            xhttp.send(JSON.stringify({ petHunger: hunger, petHappiness: happiness, money: money }));
        }

        function colorChange() {
            const square = document.getElementById('square');
            if (petHunger < 20 || petHappiness < 20) {
                square.style.backgroundColor = "#FF0000";
            } else if (petHunger >= 20 && petHappiness >= 20) {
                square.style.backgroundColor = "#E48400";
            }
        }
    </script>
</body>

</html>